@model IEnumerable<CareerCloud.Pocos.CompanyProfilePoco>

@{
    ViewBag.Title = "Index";
}

<h2>Company Details</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Company Name")            
        </th>
        <th>
            @Html.DisplayName("Company Website")           
        </th>
        <th>
            @Html.DisplayName("Conatct Name")           
        </th>
        <th>
            @Html.DisplayName("Contact Phone")            
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CompanyDescriptions.FirstOrDefault().CompanyName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CompanyWebsite)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ContactName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ContactPhone)
        </td>       
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
        </td>
    </tr>
}

</table>
