@model IEnumerable<CareerCloud.Pocos.CompanyProfilePoco>

@{
    ViewBag.Title = "Index";
}

<h2>Companies List</h2>

<p>
    @Html.ActionLink("Create Company", "Create")
</p>
<p>
    @using (Html.BeginForm("Index", "CompanyProfile", FormMethod.Get))
    {
        <table>
            <tr>
                <td class="col-sm-*">
                    <b>
                        Search Company: &nbsp;
                    </b>
                </td>
                <td class="col-sm-*">
                    @Html.Editor("search", new { htmlAttributes = new { @class = "form-control" } })
                </td>
                <td class="col-sm-*">
                    <input type="submit" value="Search" class="btn btn-primary" />
                </td>
                <td class="col-sm-7"></td>
            </tr>
        </table>
    }
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Company Name")            
        </th>
        <th>
            @Html.DisplayName("Company Website")           
        </th>
        <th>
            @Html.DisplayName("Conatct Name")           
        </th>
        <th>
            @Html.DisplayName("Contact Phone")            
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CompanyDescriptions.FirstOrDefault().CompanyName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CompanyWebsite)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ContactName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ContactPhone)
        </td>       
        <td>
            @*@Html.ActionLink("Edit", "Edit", new { id = item.Id }) |*@
            <b>@Html.ActionLink("View Details", "Details", new { id = item.Id })</b>
            @*@Html.ActionLink("Delete", "Delete", new { id = item.Id })*@
        </td>
    </tr>
}

</table>
